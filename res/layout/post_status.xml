<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1" android:gravity="center">
	<EditText android:inputType="textMultiLine"
		android:layout_height="wrap_content" android:id="@+id/txtStatus"
		android:layout_width="fill_parent"></EditText>
	<LinearLayout android:layout_height="wrap_content" android:layout_below="@+id/txtStatus"  
		android:layout_width="wrap_content" android:id="@+id/linearLayout1">
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Post" android:id="@+id/btnPost"></Button>
		<Button android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/btnPost" 
			android:layout_height="wrap_content" android:text="Cancel"
			android:id="@+id/btnCancel"></Button>
	</LinearLayout>
</RelativeLayout>
